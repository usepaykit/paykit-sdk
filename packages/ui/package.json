    "@tailwindcss/postcss": "^4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
